{%- assign text=include.text | default: "" -%}
{%- assign text=text | strip | newline_to_br | replace: "<br />", "<br>" | replace: "<br/>", "<br>" | strip_newlines | normalize_whitespace | replace: "<br> ", "<br>" -%}
{%- assign theindent="" -%}
{%- for indent in (1..20) -%}
    {%- for adder in (1..4) -%}
        {%- assign theindent=theindent | append: "&nbsp;" -%}
    {%- endfor -%}
    {%- assign search="@" | append: indent | append: ": " -%}
    {%- assign text=text | replace: search, theindent -%}
    {%- assign search="@" | append: indent | append: ":" -%}
    {%- assign text=text | replace: search, theindent -%}
{%- endfor -%}
{%- assign lines=text | split: "<br>" -%}
<pre class="algorithm">{%- for line in lines -%}<span class="algoN"></span><span class="algoC">{{ line }}</span>
{% endfor -%}</pre>
