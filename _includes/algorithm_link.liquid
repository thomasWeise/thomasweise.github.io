{%- assign put_as_label=include.algo_put_as_label | default: false -%}
{%- assign the_algo_id=include.id | default: "" -%}
{%- assign the_algo_id=the_algo_id | strip | strip_html | strip_newlines | normalize_whitespace | replace: " ", "" -%}
{%- assign algo_lst=page.algorithms -%}
{%- assign algo_find_index=1 -%}
{%- assign algo_print_text="" -%}
{%- for algo_id_in_list in algo_lst -%}
    {%- if algo_id_in_list == the_algo_id -%}
        {%- assign algo_print_text="Algorithm&nbsp;" | append: algo_find_index -%}
        {%- break -%}
    {%- endif -%}
    {%- assign algo_find_index=algo_find_index | plus: 1 -%}
{%- endfor -%}
{%- if algo_print_text != "" -%}
    {%- if put_as_label -%}
        <span class="algoNum" id="{{- the_algo_id -}}">{{- algo_print_text -}}.</span>
    {%- else -%}
        <a href="#{{- the_algo_id -}}">{{- algo_print_text -}}</a>
    {%- endif -%}
{%- endif -%}
