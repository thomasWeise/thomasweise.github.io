{%- assign thearray = include.array -%}
{%- assign size = thearray | size -%}
{%- capture thelongarraytext -%}
    {%- if size == 1 -%}
        {{- thearray[0] | strip | normalize_whitespace -}}
    {%- else -%}
        {%- if size == 2 -%}
            {{- thearray[0]  | strip | normalize_whitespace }} and {{ thearray[1]  | strip | normalize_whitespace }}
        {%- else -%}
            {%- assign sizemo = size | minus: 1 -%}
            {%- assign index = 1 -%}
            {%- for item in thearray -%}
                {{- item | strip | normalize_whitespace -}}
                {%- if index < size -%}
                    {%- if index < sizemo -%}, {% else -%}, and {% endif -%}
                {%- endif -%}
            {%- assign index = index | plus: 1 -%}
            {% endfor -%}
        {%- endif -%}
    {%- endif -%}
{%- endcapture -%}
{{- thelongarraytext | strip | normalize_whitespace | strip -}}
