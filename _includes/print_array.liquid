{%- assign size = include.array | size -%}
{%- if size == 1 -%}
    {{- include.array[0] -}}
{%- else -%}
    {%- if size == 2 -%}
        {{- include.array[0] }} and {{ include.array[1] }}
    {%- else -%}
        {%- assign sizemo = size | minus: 1 -%}
        {%- for item in include.array -%}
            {{- item -}}
            {%- if forloop.index1 < size -%}
                {%- if forloop.index1 < sizemo -%}, {% else -%}, and {% endif -%}
            {%- endif -%}
        {% endfor -%}
    {%- endif -%}
{%- endif -%}
