{%- assign entries_layout = page.entries_layout | default: 'list' -%}
{%- assign use_tag=include.tag | strip -%}
{%- assign empty_list="" | split: "äöü" -%}
{%- assign posts = site.tags[use_tag].last | default: empty_list %}
{%- assign tag_key = use_tag | remove: '-' | remove: '_' | strip | normalize_whitespace | strip | remove: ' ' | downcase -%}
{%- if tag_key != use_tag -%}
    {%- assign lst = site.tags[use_tag].last | default: empty_list -%}
    {%- assign posts = posts | concat: lst -%}
{%- endif -%}
{%- assign posts = posts | compact | uniq -%}
<div class="entries-{{ entries_layout }}">
    {%- for post in posts -%}
      {% include archive-single.html %}
    {%- endfor -%}
</div>
