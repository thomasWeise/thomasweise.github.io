{%- assign thearray="" -%}
{%- for theperson in include.persons -%}
    {%- capture thepersonstr -%}
        {%- include person.liquid person=theperson -%}
    {%- endcapture -%}
    {%- assign thepersonary = thepersonstr | strip | normalize_whitespace | split: "äü@ß" -%}
    {%- assign thearray = thearray | concat: thepersonary -%}
{%- endfor -%}
{%- include print_array.liquid array=thearray -%}
